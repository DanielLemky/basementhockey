<div class="container">
<h2>New Season</h2>


<%= form_with model: @season do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :season_type %>
    <%= form.text_field :season_type, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :start_date %>
    <%= form.date_field :start_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :games_per_week %>
    <%= form.text_field :games_per_week, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Create Season", class: "btn btn-primary" %>
  </div>
<% end %>

</div>