<div class="container">
    <div class="text-center">
        <h1><%= User.find(@game.away_team_id).team_name %> <%= @game.result.away_goals %> - <%= @game.result.home_goals %> <%= User.find(@game.home_team_id).team_name %></h1>
        <p>
            <% if @game.result.shootout == 1 %>
                Final (Shootout)
            <% elsif @game.result.overtime == 1 %>
                Final (Overtime)
            <% else %>
                Final
            <% end %>
        </p>
    </div>
    <div class="mb-5 text-center">
        <%= image_tag @game.result.game_photo, class: "game-photo" %>
    </div>
    <div class="mb-3 text-center">
        <%= link_to "Back to Games", season_games_path(@game.season_id), class: "btn btn-secondary" %>
    </div>
</div>