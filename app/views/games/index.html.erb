<div class="container">
    <h1>Games</h1>
    <h2><%= @season.name %> Season</h2>
    <div id="games-card" class="card">
        <div class="card-body">
            <div class="text-center mt-1 mb-4">
                <%= link_to 'Show Only My Games', season_my_games_path(@season) %>
            </div>
            <table class="table games">
                <tbody>
                    <%= render partial: 'game_rows' %>
                </tbody>
            </table>
        </div>
    </div>
</div>