<div id="dashboard" class="container">

    <% if @seasons.any? %>

        <% @seasons.each do |season| %>
            <h1><%= season.name %> Season</h1>
            <div class="row">
                <% unless season.closed? %>
                    <%= render 'next_game', season: season %>
                <% end %>
                <%= render 'current_week', season: season %>
                <%= render 'standings', season: season %>
                <%= render 'latest_results', season: season %>
                <%= render 'upcoming_games', season: season %>
            </div>
        <% end %>

    <% else %>

        <div class="card">
            <div class="card-body text-center">
                <h1>Welcome!</h1>
                <p>Thanks for creating an account!</p>
                <p>You haven't been added to any seasons yet. Stay tuned!</p>
            </div>
        </div>

    <% end %>

    <% if current_user.email == 'daniel@lemky.ca' %>
        <%= render 'admin' %>
    <% end %>

</div>