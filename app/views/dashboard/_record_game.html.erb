<%
@my_games = Game.where(season_id: season.id).where('away_team_id=? OR home_team_id=?', current_user.id, current_user.id)
game_number = @my_games.find_index(@next_game)
%>
<% if game_number %>
    <% if (game_number / season.games_per_week) <= (season.start_date.step(Date.today, 7).count) %>
        <div class="next-game-status">
            <p class="text-uppercase fw-bold mb-2">Ready to Play</p>
            <%= link_to 'Record Result', new_game_result_path(@next_game), class: "btn btn-primary" %>
        </div>
    <% else %>
        <div class="next-game-status">
            <p class="text-uppercase fw-bold">Week #<%= (season.start_date.step(Date.today, 7).count) + 1 %></p>
        </div>
    <% end %>
<% else %>
    <div class="next-game-status alert alert-primary">
        <span>No additional games are scheduled</span>
    </div>
<% end %>