<div class="col-md-6">
    <div id="latest-results" class="card">
        <div class="card-body">
            <h3 class="card-title">Latest Results</h3>
            <table class="table">
                <thead>
                    <th>Away</th>
                    <th></th>
                    <th class="text-end">Home</th>
                </thead>
                <tbody>
                    <% @results.each do |result| %>
                    <tr>
                        <td><%= User.find(result.game.away_team_id).team_name %></td>
                        <td class="text-center">
                            <%= result.away_goals %> - <%= result.home_goals %><br>
                            <% if result.overtime == 1 && result.shootout == 0%>
                                FINAL (OT)
                            <% elsif result.shootout == 1 %>
                                FINAL (SO)
                            <% else %>
                                FINAL
                            <% end %>
                        </td>
                        <td class="text-end"><%= User.find(result.game.home_team_id).team_name %></td>
                    </tr>
                    <% end  %>
                </tbody>
            </table>
            <div class="text-center">
                <%= link_to 'View All Games', season_games_path(season) %>
            </div>
        </div>
    </div>
</div>