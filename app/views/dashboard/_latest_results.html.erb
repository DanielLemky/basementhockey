<div class="col-md-6">
    <div id="latest-results" class="card">
        <div class="card-body">
            <h3 class="card-title">Latest Results</h3>
            <% if season.results.any? %>
                <table class="table">
                    <thead>
                        <th>Away</th>
                        <th></th>
                        <th class="text-end">Home</th>
                    </thead>
                    <tbody>
                        <% season.results.limit(5).each do |result| %>
                        <tr>
                            <td><%= User.find(result.game.away_team_id).team_name %></td>
                            <td class="text-center">
                                <%= result.away_goals %> - <%= result.home_goals %><br>
                                <% if result.shootout == 1 %>
                                    FINAL (SO)
                                <% elsif result.overtime == 1 %>
                                    FINAL (OT)
                                <% else %>
                                    FINAL
                                <% end %>
                            </td>
                            <td class="text-end"><%= User.find(result.game.home_team_id).team_name %></td>
                        </tr>
                        <% end  %>
                    </tbody>
                </table>
                <div class="text-center">
                    <%= link_to 'View All Games', season_games_path(season), class: "btn btn-primary" %>
                </div>
            <% else %>
                <div class="alert alert-primary">
                    No games have been played yet.
                </div>
            <% end %>
        </div>
    </div>
</div>